{
  "name": "hardhat-project",
  "scripts": {
    "help": "npx hardhat help",
    "test": "npx hardhat test  --network localhost",
    "gastest": "REPORT_GAS=true npx hardhat test  --network localhost",
    "node": "npx hardhat node",
    "deploy": "npx hardhat run scripts/deploy.js --network localhost",
    "dl": "npx hardhat run scripts/deploy.js --network localhost",
    "verify": "npx hardhat verify --network Goerili 0xf41A9c49b50fA36620F09D30698b2a78174318b7  ",
    "lint": "yarn solhint 'contracts/*.sol'",
    "lint:fix": "yarn solhint 'contracts/*.sol' --fix",
    "format": "yarn prettier --write .",
    "coverage": "yarn  hardhat coverage"
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.6",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@nomicfoundation/hardhat-toolbox": "^2.0.2",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@^0.3.0-beta.13",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@typechain/ethers-v5": "^10.2.0",
    "@typechain/hardhat": "^6.1.5",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.15.3",
    "chai": "^4.3.7",
    "ethers": "^5.7.2",
    "hardhat": "^2.13.0",
    "hardhat-gas-reporter": "^1.0.9",
    "solidity-coverage": "^0.8.2",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@chainlink/contracts": "^0.6.1",
    "dotenv": "^16.0.3",
    "hardhat-deploy": "^0.11.25",
    "solhint": "^3.4.1"
  }
}
